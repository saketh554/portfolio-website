{
  "extends": ["airbnb", "prettier"],
  "plugins": ["prettier"],
  "env": {
    "browser": true,
    "node": true,
    "es2021": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "prettier/prettier": "warn",
    "react/react-in-jsx-scope": "off",                     // ✅ Allow JSX without importing React
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "react/prop-types": "off",                             // ✅ Disable if not using PropTypes
    "camelcase": "off",                                    // ✅ Useful for APIs with snake_case
    "react/button-has-type": "off",
    "react/jsx-props-no-spreading": "off",                 // ✅ Allow spreading props
    "no-use-before-define": "off",                         // ✅ Allow use before define (dev-friendly)
    "react/no-array-index-key": "off",                     // ✅ Acceptable for static lists
    "no-console": "warn",                                  // ⚠️ Warn for console logs instead of breaking
    "react/no-danger": "warn",                             // ⚠️ Warn if dangerouslySetInnerHTML is used
    "jsx-a11y/label-has-associated-control": "warn"        // ⚠️ Still warn for accessibility
  }
}
